<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".Delivery"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/delivery_options"
        android:textColor="@color/white_greyish"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDatePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Picked Date-->

    <ImageView
        android:id="@+id/top_nav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="231dp"
        android:contentDescription="@string/nav_button"
        app:layout_constraintBottom_toTopOf="@+id/tvg"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_reorder_24" />

    <!--Picked Time-->

    <!--Deliver to topic-->

    <!--Deliver to topic-->

    <!--Address View-->


    <!--Submit button-->


    <!--When to deliver topic-->

    <!--Date picker-->

    <!--Time picker-->

    <!--Place picker-->

    <!--Text view for map-->

    <!--Now button-->

    <!--Later button-->

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="48dp"
        android:background="@android:color/background_light"
        android:text="@string/DatePic"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTimePicker"
        app:layout_constraintEnd_toStartOf="@+id/date_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/date_in"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginEnd="83dp"
        android:background="@android:color/holo_blue_dark"
        android:hint="@string/Date"
        android:importantForAutofill="no"
        android:inputType="none"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnDatePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDatePicker"
        app:layout_constraintTop_toTopOf="@+id/btnDatePicker"
        tools:ignore="MissingConstraints,TextFields" />

    <Button
        android:id="@+id/btnTimePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="47dp"
        android:background="@android:color/background_light"
        android:text="@string/TimePic"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/viewLoc"
        app:layout_constraintEnd_toStartOf="@+id/time_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDatePicker" />

    <EditText
        android:id="@+id/time_in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="83dp"
        android:background="@android:color/holo_blue_dark"
        android:hint="@string/Time"
        android:importantForAutofill="no"
        android:inputType="none"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnTimePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTimePicker"
        app:layout_constraintTop_toTopOf="@+id/btnTimePicker"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/viewLoc"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="9dp"
        android:background="@android:color/background_light"
        android:text="View Saved Location"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPicker"
        app:layout_constraintEnd_toStartOf="@+id/addressView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTimePicker" />

    <Button
        android:id="@+id/btnPicker"
        android:layout_width="111dp"
        android:layout_height="39dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="206dp"
        android:background="@android:color/holo_blue_bright"
        android:text="@string/pick_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/time_in"
        app:layout_constraintTop_toBottomOf="@+id/viewLoc" />

    <TextView
        android:id="@+id/addressView"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_marginEnd="65dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/Address"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewLoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewLoc" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="326dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:text="@string/submit"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPicker"
        app:layout_constraintVertical_bias="0.833" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation" />

    <TextView
        android:id="@+id/tvg"
        android:layout_width="386dp"
        android:layout_height="364dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="89dp" />


</androidx.constraintlayout.widget.ConstraintLayout>